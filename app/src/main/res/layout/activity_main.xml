<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lotte.imitate_weipinhui.MainActivity">

    <com.lotte.imitate_weipinhui.support.view.MyScrollView
        android:id="@+id/my_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@mipmap/bg" />

                <RelativeLayout
                    android:id="@+id/rl_un_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_register"
                        style="@style/text_in_header"
                        android:paddingRight="16dp"
                        android:text="注册" />

                    <View
                        android:id="@+id/divider1"
                        style="@style/divider_vertical"
                        android:layout_alignBottom="@+id/tv_login"
                        android:layout_alignTop="@+id/tv_register"
                        android:layout_toRightOf="@+id/tv_register"
                        android:background="@color/text_dark_gray" />

                    <TextView
                        android:id="@+id/tv_login"
                        style="@style/text_in_header"
                        android:layout_toRightOf="@+id/divider1"
                        android:paddingLeft="16dp"
                        android:text="登录" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_header"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/default_header" />

                    <TextView
                        android:id="@+id/tv_vip_level"
                        style="@style/text_in_header"
                        android:layout_below="@+id/iv_header"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="18dp"
                        android:text="铁牌会员" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_vip_level"
                        android:paddingTop="18dp">

                        <TextView
                            android:id="@+id/tv_nickname"
                            style="@style/text_in_header"
                            android:layout_centerHorizontal="true"
                            android:text="Lotte" />

                        <TextView
                            android:id="@+id/tv_vip_club"
                            android:layout_width="70dp"
                            android:layout_height="22dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/vip_club_shape"
                            android:gravity="center"
                            android:text="会员俱乐部 >"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <View style="@style/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="待付款"
                    android:textColor="@color/text_black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="待收货"
                    android:textColor="@color/text_black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="全部订单"
                    android:textColor="@color/text_black" />
            </LinearLayout>

            <View style="@style/divider_16dp" />

            <TextView
                style="@style/text_item"
                android:text="我的资产" />

            <View style="@style/divider_16dp" />

            <TextView
                style="@style/text_item"
                android:text="我的特卖" />

            <View
                style="@style/divider"
                android:layout_marginLeft="16dp" />

            <TextView
                style="@style/text_item"
                android:text="生活小助手" />

            <View
                style="@style/divider"
                android:layout_marginLeft="16dp" />

            <TextView
                style="@style/text_item"
                android:text="会员俱乐部" />

            <View style="@style/divider_16dp" />

            <TextView
                style="@style/text_item"
                android:text="账户与安全" />

            <View
                style="@style/divider"
                android:layout_marginLeft="16dp" />

            <TextView
                style="@style/text_item"
                android:text="唯品客服" />

            <View style="@style/divider_16dp" />

            <TextView
                style="@style/text_item"
                android:text="关于唯品" />

            <View
                style="@style/divider"
                android:layout_marginLeft="16dp" />

            <TextView
                style="@style/text_item"
                android:text="设置" />
        </LinearLayout>
    </com.lotte.imitate_weipinhui.support.view.MyScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="@color/text_black" />

        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@mipmap/settings" />
    </RelativeLayout>

    <View
        android:id="@+id/divider0"
        style="@style/divider"
        android:layout_below="@+id/toolbar"
        android:visibility="invisible" />
</RelativeLayout>
